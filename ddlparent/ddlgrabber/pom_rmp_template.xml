<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.ak.hive</groupId>
	<artifactId>ddlgrabber</artifactId>
	<version>0.0.1</version>
	<packaging>jar</packaging>

	<name>ddlgrabber</name>
	<url>http://maven.apache.org</url>

	<properties>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<app.home>/Users/akeezhadath/ddlgrabber</app.home>
		<app.log.home>/var/log/ddlgrabber/</app.log.home>
		<install.user>root</install.user>
		<app.user>hdfs</app.user>
		<app.user.group>hadoop</app.user.group>
		<systemd.path>/etc/systemd/system/</systemd.path>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
<profiles>
		<profile>
			<id>tar</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-assembly-plugin</artifactId>
						<version>2.5.3</version>
						<configuration>
							<descriptor>assembly.xml</descriptor>
							<tarLongFileMode>posix</tarLongFileMode>
							<outputDirectory>${project.artifactId}/</outputDirectory>
						</configuration>
						<executions>
							<execution>
								<id>create-archive</id>
								<phase>package</phase>
								<goals>
									<goal>single</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>rpm</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>rpm-maven-plugin</artifactId>
						<version>2.1.5</version>
						<executions>
							<execution>
								<phase>package</phase>

								<goals>
									<goal>rpm</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<copyright>NA</copyright>
							<group>Development</group>
							<description>Maven Recipe: RPM Package.</description>
							<requires>
								<require>bigtop-jsvc</require>
							</requires>
							<script>
								<posttransScriptlet>systemctl enable ddlgrabber.service</posttransScriptlet>
							</script>
							<mappings>
								<mapping>
									<directory>${app.home}/lib</directory>
									<dependency>
										<includes>
											<include>org.apache.hive:hive-exec</include>
											<include>org.apache.hive:hive-jdbc</include>
											<include>org.apache.hadoop:hadoop-client</include>
											<include>org.postgresql:postgresql</include>
											<include>mysql:mysql-connector-java</include>
											<include>org.apache.kafka:kafka_2.12</include>
											<include>org.apache.hadoop:hadoop-common</include>
										</includes>
									</dependency>
									<artifact />
								</mapping>
								<mapping>
									<directory>${app.home}</directory>
									<filemode>755</filemode>
									<username>${install.user}</username>
									<groupname>${install.user}</groupname>
									<sources>
										<source>
											<location>${project.basedir}/src/main/resources/bin/ddlgrabber</location>
										</source>
										<source>
											<location>${project.basedir}/src/main/resources/bin/ddlgrabber.server</location>
										</source>
									</sources>
								</mapping>
								<mapping>
									<directory>${systemd.path}</directory>
									<directoryIncluded>false</directoryIncluded>
									<filemode>755</filemode>
									<username>${install.user}</username>
									<groupname>${install.user}</groupname>
									<sources>
										<source>
											<location>${project.basedir}/src/main/resources/ddlgrabber.service</location>
										</source>
									</sources>
								</mapping>
								<mapping>
									<directory>${app.home}</directory>
									<directoryIncluded>true</directoryIncluded>
									<filemode>755</filemode>
									<username>${install.user}</username>
									<groupname>${install.user}</groupname>
									<sources>
										<source>
											<location>${project.basedir}/src/main/resources/bin/</location>
										</source>
									</sources>
								</mapping>
								<mapping>
									<directory>${app.home}/conf/</directory>
									<filemode>755</filemode>
									<username>${install.user}</username>
									<groupname>${install.user}</groupname>
									<sources>
										<source>
											<location>${project.basedir}/src/main/resources/conf/ddlgrabber.config.template</location>
										</source>
										<source>
											<location>${project.basedir}/src/main/resources/conf/log4j.properties</location>
										</source>
									</sources>
								</mapping>
								<mapping>
									<directory>${app.log.home}</directory>
									<filemode>775</filemode>
									<username>${app.user}</username>
									<groupname>${app.user.group}</groupname>
								</mapping>
							</mappings>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<dependencies>
		<dependency>
			<groupId>org.apache.hive</groupId>
			<artifactId>hive-exec</artifactId>
			<version>1.2.1</version>
		</dependency>
		
		<dependency>
			<groupId>org.apache.hive</groupId>
			<artifactId>hive-jdbc</artifactId>
			<version>1.2.1</version>
		</dependency>
		
		<dependency>
			<groupId>org.apache.hadoop</groupId>
			<artifactId>hadoop-client</artifactId>
			<version>2.7.3</version>
		</dependency>
		
		<dependency>
			<groupId>org.postgresql</groupId>
			<artifactId>postgresql</artifactId>
			<version>42.2.6</version>
		</dependency>
		
		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
			<version>5.1.24</version>
		</dependency>


		<dependency>
			<groupId>org.apache.kafka</groupId>
			<artifactId>kafka_2.12</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>org.apache.hadoop</groupId>
			<artifactId>hadoop-common</artifactId>
			<version>2.7.3</version>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>rpm-maven-plugin</artifactId>
				<version>2.0.1</version>
				<executions>
					<execution>
						<goals>
							<goal>rpm</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<copyright>2010, NoBody</copyright>
					<group>Development</group>
					<description>Maven Recipe: RPM Package.</description>
					<mappings>
						<mapping>
							<directory>${app.home}/lib/</directory>
							<dependency/>
							<artifact/>
						</mapping>
						<mapping>
							<directory>${app.home}/conf</directory>
							<configuration>true</configuration>
							<sources>
								<source>
									<location>${project.basedir}/dumper.properties</location>
									<destination>app.sample.properties</destination>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>${app.home}/logs</directory>
						</mapping>
					</mappings>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
